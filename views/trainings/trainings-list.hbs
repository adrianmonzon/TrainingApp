        <form action='/entrenamientos'>
        <select name="trainingsSel">
                        <option>Elige lugar...</option>
                        <option value="1">Al aire libre</option>
                        <option value="2">En casa</option>
            </select>
            <button type="submit" class="btn btn-dark btn-sm">Filtrar</button>
        </form>
    

    <div class="row justify-content-around">

        <div class="col-md-4 training-col">



            <ul class="trainings-list">
                {{#each allTrainings}}
                <li>
                    <h4><strong>{{name}}</strong></h4>
                    <p>{{type}}</p>
                    <small>
                        <div class="row">
                            <div class="col-2">
                                <a class="btn btn-dark btn-sm list-button"
                                    href="/entrenamientos/detalle/{{_id}}">ver</a>
                            </div>
                            <div class="col-4">
                                <form method="POST" action="/entrenamientos/entrenamientos-fav?training_id={{_id}}">
                                    <button class="btn btn-dark btn-sm list-button" type="submit">guardar</button>
                                </form>
                            </div>

                        </div>
                        <hr>
                    </small>
                </li>
                {{/each}}
            </ul>



        </div>

        <hr>


        <div class="col-md-8 map-container">



            <div id="trainingsMap"></div>



        </div>
    </div>
</div>



<div class="col text-center">
    <a href="/entrenamientos/crear-entrenamiento" class="btn btn-dark">Crear entrenamiento</a>
