{{> navBar}}
<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h1>Crear nuevo entrenamiento</h1>

            <form method="POST" action="/entrenamientos/crear-entrenamiento"> {{!--enctype="multipart/form-data"--}}

                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label>Descripción</label>
                    <input type="text" class="form-control" name="description">
                </div>
                <div class="form-group">
                    <label for="exercise-list">Tipo:</label>
                    <select name="exercise" class="form-control" id="type-list">
                        <option>Seleccionar</option>
                        <option>Público</option>
                        <option>Privado</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Duración</label>
                    <input type="number" class="form-control" name="duration">
                    {{!-- <small class="form-text text-muted">Respeta las puntuaciones de IMDB.</small> --}}
                </div>
                <div class="form-group">
                    <label>Número de ejercicios</label>
                    <input type="text" class="form-control" name="exerciseNumber">
                </div>
                <div class="form-group">
                    <label for="exercise-list">Ejercicio:</label>
                    <select name="exercise" class="form-control" id="exercise-list">
                        <option>Seleccionar</option>
                        <option>Pecho</option>
                        <option>Espalda</option>
                        <option>Brazos</option>
                        <option>Piernas</option>
                        <option>Abdomen</option>
                        <option>Cardio</option>

                    </select>
                </div>
                <div class='form-group'>
                    <label for="exercise-list">Imagen del ejercicio:</label>
                    <div class="custom-file">
                        <input name="image" type="file" class="custom-file-input" id="image">
                        <label class="custom-file-label" for="image">Seleccionar imagen</label>
                    </div>
                    <button type="submit" class="btn btn-dark create-button">Crear nuevo entrenamiento</button>
            </form>
        </div>
    </div>



</div>
{{> footer}}